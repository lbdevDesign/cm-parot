---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="max-w-4xl mx-auto px-6 py-40">
    <article class="prose prose-lg prose-headings:font-bold prose-headings:text-[#313181] prose-h1:text-4xl prose-h1:mb-8 prose-h2:text-2xl prose-h2:mt-8 prose-h2:mb-4 prose-p:text-gray-600 prose-p:leading-relaxed prose-strong:text-[#313181] prose-a:text-[#37A4B3] prose-a:no-underline hover:prose-a:underline prose-ul:text-gray-600 max-w-none">
      <slot />
    </article>
  </div>
</Layout>