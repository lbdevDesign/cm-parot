---
import "../styles/global.css"
import NavbarHome from "@/components/NavbarHome.astro"
import Footer from "@/components/Footer.astro"
import { SEO } from 'astro-seo';

// Récupérer l'URL actuelle
const { pathname } = Astro.url;
const isHome = pathname === '/' || pathname === '';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const siteName = "Cabinet Médical Partenaire";

const { 
  title = "Titre par défaut de ton site",
  description = "Description par défaut de ton site",
  image = "/images/og-image.jpg",
  noindex = false
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Geologica:wght,CRSV@100..900,0&family=Onest:wght@100..900&display=swap" rel="stylesheet">
		<title>Centre médical Parot</title>
		<SEO
			title={title}
			description={description}
			noindex={noindex}
			nofollow={noindex}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
				},
					optional: {
					siteName: siteName,
					description: description,
					locale: "fr_FR",
				},
			}}
			twitter={{
				card: "summary_large_image",
				title: title,
				description: description,
				image: image,
			}}
			extend={{
				link: [{ rel: "icon", href: "/favicon.svg" }],
				meta: [
					{ name: "theme-color", content: "#313181" },
				],
			}}
		/>
	</head>
	<body class="bg-[--brand-surface]">
		<NavbarHome alwaysScrolled={!isHome} />
			<main>
				<slot />
			</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
