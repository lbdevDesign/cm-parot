---
import Link from './Link';
import { Image } from 'astro:assets';
import team from '../data/team.js';
---

<section class="w-screen px-6 py-20 flex flex-col align-center justify-center" id="our-team">
  <h2 class="text-4xl font-bold text-center mb-16">Notre Ã©quipe</h2>

  <div class="mx-auto flex flex-wrap justify-center gap-10">
    {team.map((member) => (
      <div class="w-3xs bg-white shadow-lg rounded-xl overflow-hidden text-center transition hover:shadow-xl">
        <Image 
          src={member.photo} 
          alt={member.name} 
          class="w-full h-60 rounded-t-xl object-cover object-top"
        />

        <div class="p-6">
          <h3 class="text-xl font-semibold">{member.name}</h3>
          <Link href={member.url} variant="underline" target='_blank' className="mt-6 text-blue-600 hover:underline">
            Doctolib
          </Link>
        </div>
      </div>
    ))}
  </div>
</section>